<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls" style="color:indigo">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation" >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" style="color:indigo" href="/urls">My URLs</a>
        <a class="nav-item nav-link" style="color:indigo" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <% if (userID) { %>
      <form class="form-inline" action="/logout" method="POST">
        <div class="form-group">
          <label for="userID" class="mx-sm-3">Logged in as <%= userID['email'] %>!</label>
          <button type="submit" class="btn btn-primary">Logout</button>
        </div>
      </form>
    <% } else { %>
      <form class="form-inline" action="/login" method="GET">
        <div class="form-group mb-2">
          <label for="login" class="mx-sm-3" style="color:indigo"></label>
          <button type="submit" class="btn btn-primary">Login</button>
        </div>
      </form>
      <form class="form-inline" action="/register" method="GET">
        <div class="form-group mb-2">
          <label for="register" class="mx-sm-3" style="color:indigo"></label>
          <button type="submit" class="btn btn-primary">Register</button>
        </div>
      </form>
    <% } %>
  </nav>
</header>